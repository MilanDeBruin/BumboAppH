@using Bumbo.App.Web.Models.ViewModels.Employee
@model EmployeeViewModel

@{
    ViewData["Title"] = "Medewerkersgegevens";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Medewerkersgegevens</h1>

    <div class="row gy-3">
        <div class="col-md-6">
            <label asp-for="EmployeeId" class="form-label">Medewerkersnummer</label>
            <input asp-for="EmployeeId" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="BranchId" class="form-label">Vestigingsnummer</label>
            <input asp-for="BranchId" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="LaborContract" class="form-label">Contracttype</label>
            <input asp-for="LaborContract" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="Position" class="form-label">Afdeling</label>
            <input asp-for="Position" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="HiringDate" class="form-label">Startdatum contract</label>
            <input asp-for="HiringDate" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label">Voornaam</label>
            <input asp-for="FirstName" class="form-control" readonly />
        </div>

        @if (!string.IsNullOrEmpty(Model.Infix))
        {
            <div class="col-md-6">
                <label asp-for="Infix" class="form-label">Tussenvoegsel</label>
                <input asp-for="Infix" value="@Model.Infix" class="form-control" readonly />
            </div>
        }

        <div class="col-md-6">
            <label asp-for="LastName" class="form-label">Achternaam</label>
            <input asp-for="LastName" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="DateOfBirth" class="form-label">Geboortedatum</label>
            <input asp-for="DateOfBirth" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="HouseNumber" class="form-label">Huisnummer</label>
            <input asp-for="HouseNumber" class="form-control" readonly />
        </div>

        @if (!string.IsNullOrEmpty(Model.Addition))
        {
            <div class="col-md-6">
                <label asp-for="Addition" class="form-label">Toevoeging</label>
                <input asp-for="Addition" value="@Model.Addition" class="form-control" readonly />
            </div>
        }

        <div class="col-md-6">
            <label asp-for="ZipCode" class="form-label">Postcode</label>
            <input asp-for="ZipCode" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="EmailAdres" class="form-label">E-mailadres</label>
            <input asp-for="EmailAdres" class="form-control" readonly />
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Index" asp-route-branchId="@Model.BranchId" class="btn btn-secondary">Terug</a>
        
        <a asp-action="Edit" asp-route-employeeId="@Model.EmployeeId" class="btn btn-primary">Wijzig</a>
        
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" name="employeeId" value="@Model.EmployeeId" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Weet je zeker dat je @Model.FirstName wil verwijderen?')">
                Verwijder
            </button>
        </form>
    </div>
</div>
