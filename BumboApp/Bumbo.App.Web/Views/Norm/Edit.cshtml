@model Bumbo.Data.Models.Norm

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Bewerken - @Html.DisplayFor(m => m.SupermarketActivity)</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                @* Verborgen veld voor de primaire sleutel (BranchId) *@
                <input asp-for="BranchId" type="hidden" />

                @* Verborgen veld voor SupermarketActivity *@
                <input asp-for="SupermarketActivity" type="hidden" />
                
                <div class="mb-3">
                    <label class="form-label">Norm per uur</label>
                    <input asp-for="NormPerHour" class="form-control" />
                    <span asp-validation-for="NormPerHour" class="text-danger"></span>
                </div>

                @* Verborgen veld voor Unit *@
                <input asp-for="Unit" type="hidden" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Terug</a>
                    <input type="submit" value="Opslaan" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

