@model Bumbo.Data.Models.Norm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit - @Html.DisplayFor(m => m.SupermarketActivity)</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* Hidden field for primary key (BranchId) *@
            <input asp-for="BranchId" type="hidden" />

            <div class="form-group" hidden>

                @Html.DisplayFor(m => m.SupermarketActivity)
                <input asp-for="SupermarketActivity" class="form-control" type="hidden" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Norm per uur</label>
                <input asp-for="NormPerHour" class="form-control" min="1"/>
                <span asp-validation-for="NormPerHour" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <div>
                    <a asp-action="Index" class="btn btn-secondary">Terug</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opslaan" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}