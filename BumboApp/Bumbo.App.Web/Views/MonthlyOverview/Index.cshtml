@model Bumbo.App.Web.Models.ViewModels.MonthlyOverviewViewModel

<h1>Maandoverzicht Beheren</h1>

<form asp-action="GenerateOverview" method="post">
    <label for="month">Maand:</label>
    <select id="month" name="SelectedMonth">
        <option>Januari</option>
        <option>Februari</option>
        <option>Maart</option>
        <option>April</option>
        <option>Mei</option>
        <option>Juni</option>
        <option>Juli</option>
        <option>Augustus</option>
        <option>September</option>
        <option>Oktober</option>
        <option>November</option>
        <option>December</option>
    </select>

    <label for="year">Jaar:</label>
    <input type="number" id="year" name="SelectedYear" value="@DateTime.Now.Year" />

    <button type="submit">Genereer Overzicht</button>
</form>

<h2>Werknemer Overzicht</h2>
<table>
    <thead>
        <tr>
            <th>Naam</th>
            <th>Gewerkte Uren</th>
            <th>Roosterinformatie</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<form asp-action="Save" method="post">
    <input type="hidden" name="SelectedMonth" value="@Model.SelectedMonth" />
    <input type="hidden" name="SelectedYear" value="@Model.SelectedYear" />
    <button type="submit">Opslaan</button>
</form>
