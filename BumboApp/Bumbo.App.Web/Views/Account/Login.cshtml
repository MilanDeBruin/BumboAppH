@model Bumbo.App.Web.Models.ViewModels.Forecast.LoginViewModel

@{
    ViewData["Title"] = "Aanmelden Bumbo";
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="background-overlay"></div>
    <div class="login-container">
        <div class="login-header">
            <img src="~/images/bumbo-logo.png" alt="Bumbo Logo" class="login-logo">
            <h1>Aanmelden</h1>
        </div>
        <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div> @* TODO: class="text-danger" is temporary solution, needs to be replaced *@
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email">
            </div>

            <div class="form-group">
                <label asp-for="Password">Wachtwoord</label>
                <input asp-for="Password">
            </div>

            <button type="submit" class="btn-submit">Inloggen</button>
        </form>
    </div>
</body>
</html>
